<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.QuitarPublicidadFragment"
    android:padding="20dp"
    android:background="@color/colorFondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo150x150"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mensajequitarpublicidad"
            android:textColor="@color/colorTexto"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:fontFamily="@font/fuente"/>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?colorPrimary"
            app:contentPadding="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginTop="15dp"
            android:id="@+id/card_ver_video">
            <TextView
                android:id="@+id/btnvervideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vervideo"
                android:background="?colorPrimary"
                android:textColor="#fff"
                android:fontFamily="@font/fuente"
                android:gravity="center_horizontal"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>