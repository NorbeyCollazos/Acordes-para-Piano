<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.InfoFragment"
    android:orientation="vertical"
    android:background="@color/colorFondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fuente"
                    android:text="@string/app_name"
                    android:textColor="@color/colorTexto"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtversion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fuente"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/colorTexto"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_logo150x150" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_weight="1"
                android:gravity="center">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/fuente"
                            android:gravity="center_horizontal"
                            android:text="@string/desarrollador"
                            android:textColor="@color/colorTexto"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/fuente"
                            android:gravity="center_horizontal"
                            android:text="Norbey Collazos Ramirez \n ncrcollazos@gmail.com"
                            android:textColor="@color/colorTexto"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/fuente"
                            android:gravity="center_horizontal"
                            android:text="@string/si_te_gustado"
                            android:textColor="@color/colorTexto"
                            android:textSize="16sp" />

                        <RatingBar
                            android:id="@+id/rbcalificacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="0.1"
                            android:layout_gravity="center_horizontal"/>

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="?colorPrimary"
                            app:cardElevation="4dp"
                            card_view:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/btncalificarplay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?colorPrimary"
                                android:fontFamily="@font/fuente"
                                android:text="@string/calificar_play_tore"
                                android:textColor="#fff" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/fuente"
                            android:gravity="center_horizontal"
                            android:text="@string/si_tienes_alguna"
                            android:textColor="@color/colorTexto"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/fuente"
                            android:gravity="center_horizontal"
                            android:text="ncrcollazos@gmail.com"
                            android:textColor="@color/colorTexto"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardBackgroundColor="?colorPrimary"
                            app:cardElevation="4dp"
                            card_view:cardCornerRadius="10dp">

                            <Button
                                android:id="@+id/btnenviarmensaje"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?colorPrimary"
                                android:fontFamily="@font/fuente"
                                android:text="@string/enviar_mensaje"
                                android:textColor="#fff" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>